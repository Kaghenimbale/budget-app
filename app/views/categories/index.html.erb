<main>
  <% if @categories.blank? %>
    <h3 class="empty">Your categories list is currently empty!</h3>
  <% else %>
    <ul class="cards">
      <% @categories.each do |category| %>
        <li class="card">
          <%= link_to user_category_activities_path(@user, category) do %>
            <div class="card-body d-flex">
              <div class="image">
                <% if category.icon.attached? %>
                  <%= image_tag url_for(category.icon), class: "image" %>
                <% end %>
              </div>

              <div class="card-description">
              <div>
                <h4><%= category.name %></h4>
                <p><%= category.created_at %></p>
              </div>
              <p>$<%= category.activities.sum { |activity| activity.amount } %></p>
              </div>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% end %>
</main>
<div class="add_btn_wrap">
  <%= link_to "Add new category", new_user_category_path(@user), class: "btn" %>
</div>
