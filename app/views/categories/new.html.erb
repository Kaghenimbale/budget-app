<main>
<div class="main-page">
  <%= form_with model: @category, url: user_categories_path(current_user),  method: :post do |form| %>
    <% if @category.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(@category.errors.count, "error") %>
          prohibited category from being saved:</h2>

        <ul>
          <% @category.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form">
    <div class="field">
      <%= form.text_field :name, placeholder: "Name", class:"input" %>
    </div>

    <div class="field">
      <%= form.file_field :icon, placeholder: "Upload icon" %>
    </div>

    <div class="actions">
      <%= form.submit class:"btn" %>
    </div>
    </div>
  <% end %>
  </div>
</main>
