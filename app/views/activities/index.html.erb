<%= link_to user_categories_path do %>
  <i class="bi bi-arrow-left btn">Back</i>
<%end%>

<div>
  <div class="d-flex align">
    <h3>Total transactions: $<%= @activities.sum { |a| a.amount } %></h3>
  </div>

  <% if @activities.blank? %>
    <h3 class="empty">Your Transactions list is currently empty!</h3>
  <% else %>
    <ul id="list" class="cards">
      <% @activities.most_recent.each do |a| %>
        <li class="card d-flex">
          <div class="card-body d-flex">
            <div>
              <% if @category.icon.attached? %>
                <%= image_tag url_for(@category.icon), class: "image" %>
              <% end %>

            </div>
            <div class="card-description">
              <div>
                <h4><%= a.name %></h4>
                <p><%= a.created_at %></p>
              </div>
              <p class="amount">$<%= a.amount %></p>
            </div>
          </div>
          <div class="delete_wrap">
             <%= link_to "Details",  user_category_activity_path(@user, @category, a), class: "btn" %>
          </div>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
<div class="add_btn_wrap">
  <%= link_to "Add new transaction", new_user_category_activity_path(@user, @category), class: "btn" %>
</div>


