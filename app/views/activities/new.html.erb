<div class="main-page">
  <%= form_with model: @activity, url: user_category_activities_path(current_user, @category),  method: :post do |form| %>
    <% if @activity.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(@category.errors.count, "error") %>
          prohibited Transaction from being saved:</h2>

        <ul>
          <% @activity.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form">
    <div class="field">
      <%= form.text_field :name, placeholder: "Name", class:"input" %>
    </div>

    <div class="field">
      <%= form.number_field :amount, placeholder: "Amount", class:"input" %>
    </div>

    <div class="field">
      <%= form.collection_select :category_id,
                             current_user.categories,
                             :id,
                             :name,
                             include_blank: "Select category", class:"input" %>
    </div>

    <div class="actions">
      <%= form.submit class:"btn" %>
    </div>
  <% end %>
  </div>
